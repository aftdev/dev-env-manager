{
  "name": "@aftdev/dev-env-manager",
  "version": "3.1.0",
  "description": "Command line utilities to manage your projects development environment",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "development",
    "environment manager",
    "docker",
    "package manager"
  ],
  "engines": {
    "node": ">=18.0"
  },
  "bin": {
    "dev": "./bin/index.js"
  },
  "author": "Christophe G",
  "repository": {
    "type": "git",
    "url": "https://github.com/aftdev/dev-env-manager"
  },
  "license": "MIT",
  "files": [
    "./bin",
    "./docs",
    "./dist",
    "./CHANGELOG.md",
    "./README.md"
  ],
  "dependencies": {
    "awilix": "^9.0.0",
    "chalk": "^5.3.0",
    "chalk-template": "^1.1.0",
    "commander": "^11.1.0",
    "enquirer": "^2.4.1",
    "extract-stack": "^3.0.0",
    "fast-glob": "^3.3.2",
    "findup-sync": "^5.0.0",
    "nconf": "^0.12.1",
    "nconf-yaml": "^1.0.2",
    "path": "^0.12.7",
    "puka": "^1.0.1",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@tsconfig/node-lts": "^18.12.5",
    "@tsconfig/recommended": "^1.0.3",
    "@types/chai": "^4.3.10",
    "@types/findup-sync": "^4.0.4",
    "@types/mocha": "^10.0.3",
    "@types/nconf": "^0.10.5",
    "@types/node": "^20.8.9",
    "@types/readable-stream": "^4.0.6",
    "@types/sinon": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "c8": "^8.0.1",
    "chai": "^4.3.10",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-tsdoc": "^0.2.17",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "mocha": "^10.2.0",
    "prettier": "^3.1.0",
    "sinon": "^17.0.1",
    "strip-ansi": "^7.1.0",
    "ts-mocha": "^10.0.0",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.1.4",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "tsc --build --clean && tsc -p tsconfig.production.json && tsc-alias -p tsconfig.production.json",
    "watch": "tsc && (concurrently \"tsc -w\" \"tsc-alias -w\")",
    "prepare": "husky install",
    "lint": "eslint --cache --max-warnings 0 .",
    "lint:fix": "yarn lint --fix",
    "format": "prettier --write ./**/*.{js,mjs,cjs,ts,md,json,yaml,yml}",
    "test": "ts-mocha",
    "test-all": "ts-mocha --paths --reporter=dot --recursive './tests/**/*.test.ts'",
    "coverage": "c8 --reporter=html --reporter=text --reporter=html yarn test-all",
    "ci:coverage": "c8 --check-coverage --reporter=none yarn test-all",
    "release": "changeset publish"
  },
  "packageManager": "yarn@3.5.0"
}
