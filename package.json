{
  "name": "@aftdev/dev-env-manager",
  "version": "4.0.1",
  "description": "Command line utilities to manage your projects development environment",
  "type": "module",
  "keywords": [
    "development",
    "environment manager",
    "docker",
    "package manager"
  ],
  "engines": {
    "node": ">=18.0"
  },
  "bin": {
    "dev": "./dist/cli.js"
  },
  "author": "Christophe G",
  "repository": {
    "type": "git",
    "url": "https://github.com/aftdev/dev-env-manager"
  },
  "license": "MIT",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./bin",
    "./docs",
    "./dist",
    "./CHANGELOG.md",
    "./README.md"
  ],
  "dependencies": {
    "awilix": "^12.0.3",
    "chalk": "^5.3.0",
    "chalk-template": "^1.1.0",
    "commander": "^12.1.0",
    "consola": "^3.2.3",
    "enquirer": "^2.4.1",
    "fast-glob": "^3.3.2",
    "findup-sync": "^5.0.0",
    "nconf": "^0.12.1",
    "nconf-yaml": "^1.0.2",
    "path": "^0.12.7",
    "puka": "^1.0.1",
    "yaml": "^2.6.1"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.10",
    "@eslint/compat": "^1.2.3",
    "@eslint/js": "^9.15.0",
    "@tsconfig/node-lts": "^22.0.1",
    "@tsconfig/recommended": "^1.0.8",
    "@types/chai": "^5.0.1",
    "@types/eslint-plugin-mocha": "^10.4.0",
    "@types/eslint__js": "^8.42.3",
    "@types/findup-sync": "^4.0.5",
    "@types/mocha": "^10.0.10",
    "@types/nconf": "^0.10.7",
    "@types/node": "^22.10.0",
    "@types/readable-stream": "^4.0.18",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "c8": "^10.1.2",
    "chai": "^5.1.2",
    "concurrently": "^9.1.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-mocha": "^10.5.0",
    "eslint-plugin-n": "^17.14.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-tsdoc": "^0.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "mocha": "^10.8.2",
    "prettier": "^3.4.1",
    "sinon": "^19.0.2",
    "ts-mocha": "^10.0.0",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0"
  },
  "scripts": {
    "build": "tsup",
    "watch": "tsup --watch",
    "prepare": "husky install",
    "lint": "eslint --cache --max-warnings 0 .",
    "lint:fix": "yarn lint --fix",
    "format": "prettier --write ./**/*.{js,mjs,cjs,ts,md,json,yaml,yml}",
    "test": "ts-mocha",
    "test-all": "ts-mocha --paths --reporter=dot --recursive './tests/**/*.test.ts'",
    "coverage": "c8 --reporter=html --reporter=text --reporter=html yarn test-all",
    "ci:coverage": "c8 --check-coverage --reporter=none yarn test-all --no-colors",
    "release": "changeset publish",
    "changelog": "changeset add"
  },
  "packageManager": "yarn@4.5.1"
}
